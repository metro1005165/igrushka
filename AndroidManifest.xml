<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuri.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.yuri.game.GameApplication"
        android:allowBackup="false"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yuri.game.ui.activities.LoginActivity"
            android:label="" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yuri.game.ui.activities.RegistrationActivity"
            android:label="Register Account" >
        </activity>
        <activity
            android:name="com.yuri.game.ui.activities.CharSelectionActivity"
            android:label="Select Your Character" >
        </activity>
        <activity
            android:name="com.yuri.game.ui.activities.MainActivity"
            android:label="" >
        </activity>
        <activity
            android:name="com.yuri.game.RequestFormerTestActivity"
            android:label="@string/title_activity_request_former_test" >
        </activity>
    </application>

</manifest>